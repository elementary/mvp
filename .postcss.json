{
    "use": ["stylelint", "autoprefixer", "postcss-reporter"],
    "input": "_styles/*.css",
    "dir": "styles",
    "autoprefixer": {
        "browsers": [
            "last 4 version",
            "not ie <= 11"
        ],
        "casecade": false
    },
    "postcss-reporter": {
        "clearMessages": true,
        "throwError": true
    }
}
