{
    "name": "elementary/website",
    "description": "The elementary.io website.",
    "type": "project",
    "keywords": ["elementary", "os", "linux"],
    "homepage": "https://elementary.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Connor S. Parks",
            "email": "contact@connorvg.tv",
            "homepage": "http://github.com/ConnorVG"
        }
    ],
    "support": {
        "source": "https://github.com/elementary/website",
        "issues": "https://github.com/elementary/website/issues"
    },
    "require": {
        "php": ">=7.1.0",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
